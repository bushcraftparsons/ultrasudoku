<resources>

    <style name="Widget.Theme.KillerSudoku.SquareView" parent="">
        <item name="squareBackgroundColor">@color/black</item>
        <item name="android:background">?background</item>
        <item name="mainNumberColor">?colorPrimary</item>
        <item name="mainNumberErrorColor">?colorError</item>
        <item name="mainNumberShownColor">?colorOnBackground</item>
        <item name="showSelectionBackgroundColor">?backgroundTint</item>
        <item name="editNumberColor">?colorOnBackground</item>
        <item name="squareBorderColor">?colorPrimary</item>
        <item name="selectedSquareBorderColor">?colorSecondary</item>
        <item name="borderWidth">3dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="Widget.Theme.KillerSudoku.NumberButton" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:clickable">true</item>
        <item name="iconButtonText">"5"</item>
        <item name="iconButtonTextColor">?colorOnPrimary</item>
        <item name="gradientRing">@drawable/dim_light_button</item>
    </style>

    <style name="Widget.Theme.KillerSudoku.Button" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:clickable">true</item>
        <item name="gradientRing">@drawable/flash_dark_button</item>
    </style>

    <style name="Widget.Theme.KillerSudoku.IconButton" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:clickable">true</item>
        <item name="iconDrawable">@drawable/dustbin</item>
        <item name="iconAction">"delete"</item>
        <item name="labelColour">?colorOnBackground</item>
        <item name="gradientRing">@drawable/dim_light_button_bottom_space</item>
    </style>
</resources>