<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KillerSudoku" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/dark_blue</item>
        <!--   a darker variant of the primary color, used for
           the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryVariant">@color/dark_blue_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/burnt_orange</item>
        <item name="colorSecondaryVariant">@color/dark_burnt_orange_darker</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/dark_red</item>
        <item name="background">@color/off_white</item>
        <item name="backgroundTint">@color/pale_blue</item>
        <item name="colorOnBackground">@color/off_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryVariant</item>
        <!-- Background color. -->
        <item name="android:windowBackground">?background</item>
        <item name="android:colorBackground">?background</item>
        <!--        Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="l">?colorPrimary</item>
    </style>
</resources>